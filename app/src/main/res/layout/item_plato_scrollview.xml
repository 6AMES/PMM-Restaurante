<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="1dp">

    <!-- Imagen del plato -->

    <!-- InformaciÃ³n del plato -->

    <ImageView
        android:id="@+id/imageViewPlato"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Imagen del plato"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- Nombre del plato -->
        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Plato"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Precio del plato -->
        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="$0.00"
            android:textSize="16sp" />

        <!-- Botones "+" y "-" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/buttonDecrementar"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:padding="1dp"
                android:text="-"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonIncrementar"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:padding="1dp"
                android:text="+"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:rotationY="180"
        android:tint="@color/gray"
        app:srcCompat="?attr/homeAsUpIndicator" />

</LinearLayout>